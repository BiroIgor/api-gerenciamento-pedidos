							"raw": "{{base_url}}/order/:orderId",
							"host": ["{{base_url}}"],
							"path": ["order", ":orderId"],
							"variable": [
								{
									"key": "orderId",
									"value": "v10089016vdb",
									"description": "ID do pedido"
								}
							]
						},
						"description": "Busca um pedido pelo ID. Requer autenticação JWT."
					},
