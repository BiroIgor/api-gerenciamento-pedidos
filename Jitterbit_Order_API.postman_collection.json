							"path": ["order", ":orderId"],
							"variable": [
								{
									"key": "orderId",
									"value": "v10089016vdb",
									"description": "ID do pedido"
								}
							]
						},
						"description": "Deleta um pedido. Requer autenticação JWT."
					},
					"response": []
