						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"numeroPedido\": \"v10089016vdb\",\n    \"valorTotal\": 15000,\n    \"dataCriacao\": \"2023-07-20T10:00:00.000Z\",\n    \"items\": [\n        {\n            \"idItem\": \"2434\",\n            \"quantidadeItem\": 2,\n            \"valorItem\": 1500\n        }\n    ]\n}"
						},
						"url": {
